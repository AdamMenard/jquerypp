<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
            "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
	<head>
		<title>default</title>
        <style type='text/css'>
            body {font-family: verdana}
            .error {border: solid 1px red;}
            .error_text { color: red; font-size: 10px;}
            td {padding: 3px;}
        </style>
	</head>
	<body>
	    <div>
	        
            <div id='wrap1'>
                <div id="clickme1" class='clickme'>ClickMe</div>
            </div>
            <div id='wrap2'>
                <div class='clickme'>ClickMe</a>
            </div>
        </div>
		<script type='text/javascript' 
                src='../../../jmvc/include.js?include[app]=jquery/event/default&include[env]=development'
                package='main.js'
                compress='false'>   
        </script>
        <script type='text/javascript'>
            var count1 = 1;
            $("#wrap1").bind("hide", function(ev){
                var el = this;
                
                ev.addDefault(function(){
                    
                    $(el).find(".clickme").text("Clicks"+count1++);
                })
            })
            var count2 = 1;
            $("#wrap2").bind("hide", function(ev){
                var el = this;
                
                ev.addDefault(function(){
                    $(el).find(".clickme").text("Clicks"+count2++);
                })
            })
            $(document.body).bind("hide", function(ev){
                if(ev.target.id == "clickme1"){
                    console.log("stopping and preventing")
                    ev.stopPropagation()
                    ev.preventDefault()
                }
                    
            })
            $(".clickme").click(function(){
                $(this).trigger("hide")
            })
        </script>
	</body>
</html>